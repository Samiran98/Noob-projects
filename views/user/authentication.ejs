    }

    const result = await fetch('/auth/register',{
        method:'POST',
        headers: {
            'content-Type' : 'application/json',
        },
        body: JSON.stringify(userDet),
    }).then( (res) => {
        console.log(res)
    }).catch(error =>{
        console.log(error)
    })
    console.log(result)
}
</script>
