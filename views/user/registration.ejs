<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body>
    <div class="container">
        <form>
            <div class="card" style="width: 28rem;">
                <div class="card-header text-center">
                    <h3>New Registration</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger d-none" id="error_alert" role="alert">
                        Invalid Email/Password
                    </div>
                    <div class="alert alert-danger d-none" id="pass_error_alert" role="alert">
                        Password Mismatch
                    </div>
                    <div class="alert alert-success d-none" role="alert" id="success_alert">
                        Operation successful
                    </div>
                    <div class="fields">
                        <div class="col">
                            <div class="row d-inline">
                                <label for="name">Name</label>
                                <input class="form-control" type="name" id="name" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row d-inline">
                                <label for="email">Email</label>
                                <input class="form-control" type="email" id="email" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row d-inline">
                                <label for="password">Password</label>
                                <input class="form-control" type="password" id="password" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row d-inline">
                                <label for="password">Confirm Password</label>
                                <input class="form-control" type="password" id="c_password" required>
                            </div>
                        </div>
                        <button class="btn btn-success" onclick="confirmPassword()">Submit</button>
                        <a class="btn btn-secondary" href="/login">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>

</html>

<script>
function confirmPassword(e) {
    e.preventDefault()
    console.log('hii')
    const pass = document.getElementById('password').value
    const cnf_pass = document.getElementById('c_password').value
    if(pass === cnf_pass) return
    document.getElementById('pass_error_alert').style.display = "block"
}
</script>
<style>
    body {
        background-color: rgba(12, 134, 108, 0.993);
    }

    .card {
        position: relative;
        margin-left: 30%;
        margin-top: 7%;
    }

    .fields {
        padding: 2%;
    }

    .link:hover {
        color: rgb(51, 255, 0)
    }
</style>